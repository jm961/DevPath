---
import BaseLayout from './BaseLayout.astro';

const { frontmatter = {} } = Astro.props;
const { title, description, noIndex = false } = frontmatter;
---

<BaseLayout {...frontmatter}>
  <!-- Hero Header -->
  <div class='relative border-b border-white/5 bg-gradient-to-b from-surface/50 to-transparent'>
    <div class='container relative py-12 sm:py-16'>
      <div class='mx-auto max-w-4xl text-center'>
        <div class='mb-4 inline-flex items-center gap-2 rounded-full bg-primary/10 px-3 py-1 text-xs font-semibold text-primary ring-1 ring-primary/20'>
          <div class='h-1.5 w-1.5 rounded-full bg-primary'></div>
          Legal
        </div>
        
        <h1 class='mb-4 text-4xl font-black text-white sm:text-5xl lg:text-6xl'>
          {title}
        </h1>
        
        {description && (
          <p class='text-base text-muted sm:text-lg'>{description}</p>
        )}
      </div>
    </div>
  </div>

  <!-- Content -->
  <div class='bg-gradient-to-b from-bg to-surface/30 py-12 sm:py-20'>
    <div class='container'>
      <div class='mx-auto max-w-4xl'>
        <article class='markdown-content-card rounded-3xl border border-white/10 bg-surface/30 p-6 backdrop-blur-sm sm:p-12'>
          <div
            class='prose prose-invert max-w-none prose-headings:text-white prose-h1:text-3xl prose-h1:font-black prose-h1:sm:text-4xl prose-h2:text-2xl prose-h2:font-bold prose-h2:text-white prose-h2:sm:text-3xl prose-h3:text-xl prose-h3:font-semibold prose-p:text-muted prose-p:leading-relaxed prose-a:font-medium prose-a:text-primary prose-a:no-underline prose-a:underline prose-a:decoration-primary/30 prose-a:underline-offset-2 hover:prose-a:text-accent hover:prose-a:decoration-accent/50 prose-strong:font-semibold prose-strong:text-white prose-ul:text-muted prose-ol:text-muted prose-li:text-muted prose-code:rounded prose-code:bg-white/5 prose-code:px-1.5 prose-code:py-0.5 prose-code:text-xs prose-code:text-primary prose-code:before:content-none prose-code:after:content-none prose-pre:bg-white/5 prose-pre:border prose-pre:border-white/10 prose-blockquote:border-primary/30 prose-blockquote:text-muted'
          >
            <slot />
          </div>
        </article>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .markdown-content-card {
    position: relative;
    overflow: hidden;
  }

  .markdown-content-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
    background-size: 40px 40px;
    pointer-events: none;
    opacity: 0.3;
    z-index: 0;
  }

  .markdown-content-card :global(.prose) {
    position: relative;
    z-index: 1;
  }

  /* Better spacing for lists */
  .markdown-content-card :global(.prose ul),
  .markdown-content-card :global(.prose ol) {
    margin-top: 1.25rem;
    margin-bottom: 1.25rem;
  }

  .markdown-content-card :global(.prose li) {
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
  }

  /* Better heading spacing */
  .markdown-content-card :global(.prose h2) {
    margin-top: 3rem;
    margin-bottom: 1.5rem;
  }

  .markdown-content-card :global(.prose h3) {
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  /* First heading no top margin */
  .markdown-content-card :global(.prose > h1:first-child),
  .markdown-content-card :global(.prose > h2:first-child),
  .markdown-content-card :global(.prose > h3:first-child) {
    margin-top: 0;
  }

  /* Paragraph spacing */
  .markdown-content-card :global(.prose p) {
    margin-top: 1.25rem;
    margin-bottom: 1.25rem;
  }
</style>
