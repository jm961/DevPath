---
import Icon from '../AstroIcon.astro';
import Loader from '../Loader.astro';

export interface Props {
  contentContributionLink: string;
}

const { contentContributionLink } = Astro.props;
---

<div id='topic-overlay' class='hidden' style='background: transparent;'>
  <div
    class='topic-overlay-panel fixed right-0 top-0 z-40 h-screen w-full overflow-y-auto p-4 sm:max-w-[700px] sm:p-6'
    tabindex='-1'
    id='topic-body'
    style='background: #0a0e1a !important;'
  >
    <div id='topic-loader' class='flex items-center justify-center py-12 hidden'>
      <Loader />
    </div>

    <div id='topic-actions' class='mb-6 hidden'>
      <div class='flex items-center justify-between'>
        <div class='flex gap-2'>
          <div data-guest-required class='hidden'>
            <button
              data-popup='login-popup'
              class='inline-flex items-center gap-2 rounded-lg bg-success/20 px-4 py-2 text-sm font-medium text-success ring-1 ring-success/30 backdrop-blur-sm transition-all hover:bg-success/30'
            >
              <Icon icon='check' />
              <span>Mark as Done</span>
            </button>
          </div>

          <div data-auth-required>
            <button
              id='mark-topic-done'
              class='inline-flex hidden items-center gap-2 rounded-lg bg-success/20 px-4 py-2 text-sm font-medium text-success ring-1 ring-success/30 backdrop-blur-sm transition-all hover:bg-success/30'
            >
              <Icon icon='check' />
              <span>Mark as Done</span>
            </button>

            <button
              id='mark-topic-pending'
              class='inline-flex hidden items-center gap-2 rounded-lg bg-danger/20 px-4 py-2 text-sm font-medium text-danger ring-1 ring-danger/30 backdrop-blur-sm transition-all hover:bg-danger/30'
            >
              <Icon icon='reset' />
              <span>Mark as Pending</span>
            </button>
          </div>
        </div>

        <button
          type='button'
          id='close-topic'
          class='inline-flex items-center justify-center rounded-lg bg-white/5 p-2 text-white transition-all hover:bg-white/10'
        >
          <Icon icon='close' />
        </button>
      </div>
    </div>

    <div id='topic-content' class='topic-overlay-content' style='background: transparent !important; color: rgba(255, 255, 255, 0.9) !important;'></div>

    <div
      id='contrib-meta'
      class='mt-8 hidden rounded-xl border border-white/10 bg-white/5 p-4 text-sm text-muted backdrop-blur-sm'
    >
      <p class='mb-0'>
        We are still working on this page. You can contribute by submitting a
        brief description and a few links to learn more about this topic <a
          target='_blank'
          class='font-medium text-accent underline transition-colors hover:text-accent-light'
          href={contentContributionLink}>on GitHub repository.</a
        >.
      </p>
    </div>
  </div>
  <div class='fixed inset-0 z-30 bg-black/70 backdrop-blur-md'></div>
</div>

<script src='./topic.js'></script>

<style>
  /* Force dark background everywhere */
  #topic-overlay,
  #topic-overlay *:not(svg):not(path):not(circle):not(line):not(rect):not(polyline):not(polygon) {
    box-sizing: border-box;
  }

  .topic-overlay-panel,
  #topic-body {
    background: #0a0e1a !important;
    border-left: 1px solid rgba(255, 255, 255, 0.1) !important;
    box-shadow: -4px 0 24px rgba(0, 0, 0, 0.5) !important;
  }

  /* Topic Content Styling - Override all default styles */
  .topic-overlay-content,
  #topic-content {
    background: transparent !important;
    color: rgba(255, 255, 255, 0.9) !important;
  }

  /* Override any inherited styles - force everything to be visible */
  #topic-content,
  #topic-content * {
    background-color: transparent !important;
  }
  
  #topic-content *:not(code):not(pre) {
    color: rgba(255, 255, 255, 0.8) !important;
  }

  /* Headings */
  .topic-overlay-content :global(h1) {
    color: #ffffff !important;
    font-size: 1.875rem;
    font-weight: 800;
    line-height: 1.2;
    margin-bottom: 1rem;
    margin-top: 1.5rem;
  }

  .topic-overlay-content :global(h1:first-child) {
    margin-top: 0;
  }

  .topic-overlay-content :global(h2) {
    color: #ffffff !important;
    font-size: 1.5rem;
    font-weight: 700;
    line-height: 1.3;
    margin-bottom: 0.75rem;
    margin-top: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .topic-overlay-content :global(h3) {
    color: #ffffff !important;
    font-size: 1.25rem;
    font-weight: 600;
    line-height: 1.4;
    margin-bottom: 0.5rem;
    margin-top: 1rem;
  }

  .topic-overlay-content :global(h4),
  .topic-overlay-content :global(h5),
  .topic-overlay-content :global(h6) {
    color: rgba(255, 255, 255, 0.95) !important;
    font-weight: 600;
    margin-bottom: 0.5rem;
    margin-top: 1rem;
  }

  /* Paragraphs */
  .topic-overlay-content :global(p) {
    margin-top: 0;
    margin-bottom: 1rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.8) !important;
  }

  /* Links */
  .topic-overlay-content :global(a) {
    color: #60a5fa !important;
    text-decoration: underline;
    text-decoration-color: rgba(96, 165, 250, 0.3);
    text-underline-offset: 2px;
    transition: all 0.2s;
  }

  .topic-overlay-content :global(a:hover) {
    color: #93c5fd !important;
    text-decoration-color: rgba(147, 197, 253, 0.6);
  }

  /* Lists */
  .topic-overlay-content :global(ul),
  .topic-overlay-content :global(ol) {
    margin-top: 0.5rem;
    margin-bottom: 1rem;
    padding-left: 1.5rem;
    color: rgba(255, 255, 255, 0.8) !important;
  }

  .topic-overlay-content :global(li) {
    margin-top: 0.25rem;
    margin-bottom: 0.25rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.8) !important;
  }

  .topic-overlay-content :global(ul > li::marker) {
    color: #3b82f6;
  }

  .topic-overlay-content :global(ol > li::marker) {
    color: #3b82f6;
    font-weight: 600;
  }

  /* Code */
  .topic-overlay-content :global(code) {
    background: rgba(59, 130, 246, 0.1) !important;
    color: #60a5fa !important;
    padding: 0.125rem 0.375rem;
    border-radius: 0.375rem;
    font-size: 0.875em;
    font-weight: 500;
    border: 1px solid rgba(59, 130, 246, 0.2);
  }

  .topic-overlay-content :global(pre) {
    background: rgba(0, 0, 0, 0.4) !important;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 0.5rem;
    padding: 1rem;
    margin-top: 1rem;
    margin-bottom: 1rem;
    overflow-x: auto;
  }

  .topic-overlay-content :global(pre code) {
    background: transparent !important;
    border: none !important;
    padding: 0;
    color: rgba(255, 255, 255, 0.9) !important;
    font-size: 0.875rem;
    line-height: 1.6;
  }

  /* Blockquotes */
  .topic-overlay-content :global(blockquote) {
    border-left: 3px solid #3b82f6 !important;
    background: rgba(59, 130, 246, 0.05) !important;
    padding: 0.75rem 1rem;
    margin: 1rem 0;
    border-radius: 0 0.5rem 0.5rem 0;
    color: rgba(255, 255, 255, 0.85) !important;
    font-style: normal;
  }

  .topic-overlay-content :global(blockquote p) {
    margin-bottom: 0;
    color: rgba(255, 255, 255, 0.85) !important;
  }

  /* Tables */
  .topic-overlay-content :global(table) {
    width: 100%;
    margin-top: 1rem;
    margin-bottom: 1rem;
    border-collapse: collapse;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 0.5rem;
    overflow: hidden;
  }

  .topic-overlay-content :global(thead) {
    background: rgba(59, 130, 246, 0.1);
  }

  .topic-overlay-content :global(th) {
    padding: 0.75rem;
    text-align: left;
    font-weight: 600;
    color: #ffffff;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .topic-overlay-content :global(td) {
    padding: 0.75rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    color: rgba(255, 255, 255, 0.8);
  }

  .topic-overlay-content :global(tr:last-child td) {
    border-bottom: none;
  }

  .topic-overlay-content :global(tbody tr:hover) {
    background: rgba(255, 255, 255, 0.02);
  }

  /* Horizontal Rule */
  .topic-overlay-content :global(hr) {
    border: none;
    height: 1px;
    background: linear-gradient(
      to right,
      transparent,
      rgba(255, 255, 255, 0.2),
      transparent
    );
    margin: 1.5rem 0;
  }

  /* Images */
  .topic-overlay-content :global(img) {
    border-radius: 0.5rem;
    margin-top: 1rem;
    margin-bottom: 1rem;
    max-width: 100%;
    height: auto;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  /* Strong/Bold */
  .topic-overlay-content :global(strong) {
    color: #ffffff !important;
    font-weight: 600;
  }

  /* Emphasis/Italic */
  .topic-overlay-content :global(em) {
    color: rgba(255, 255, 255, 0.9) !important;
  }
</style>
