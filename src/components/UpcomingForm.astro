---
import CaptchaFields from './Captcha/CaptchaFields.astro';
import Icon from './AstroIcon.astro';
---

<div class='my-0 rounded-lg px-5 pb-8 text-left sm:pb-10 sm:text-center'>
  <div class='mx-auto sm:max-w-[400px]'>
    <div class='hidden sm:block'><Icon icon='bell' /></div>
    <h2 class='mb-1 hidden text-3xl font-medium text-white sm:block'>
      Upcoming
    </h2>
    <p class='mb-0 text-muted sm:mb-5'>
      Please check back later or subscribe below.
    </p>

    <form
      action='https://news.devpath.sh/subscribe'
      method='post'
      accept-charset='utf-8'
      captcha-form
    >
      <input
        type='email'
        required
        name='email'
        id='email'
        autofocus
        class='text-md mb-2 mt-1 block w-full rounded-md border-2 border-white/20 bg-surface px-3 py-2 text-white placeholder:text-muted focus:border-primary focus:outline-none sm:px-3.5 sm:py-3'
        placeholder='Enter your email'
      />

      <CaptchaFields />

      <input type='hidden' name='list' value='tTqz1w7nexY3cWDpLnI88Q' />
      <input type='hidden' name='subform' value='yes' />

      <button
        type='submit'
        name='submit'
        class='btn-primary font-regular text-md w-full rounded-md px-5 py-2.5 text-center'
      >
        Get Notified
      </button>
    </form>
  </div>
</div>
