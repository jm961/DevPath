---
import type { RoadmapFileType } from '../lib/roadmap';

export interface Props {
  url: string;
  title: string;
  description: string;
  isNew: boolean;
}

const { url, title, description, isNew } = Astro.props;
---

<a
  href={url}
  class='card group relative flex h-full flex-col justify-between p-5 no-underline transition-all hover:scale-[1.02] sm:p-6'
>
  <!-- Gradient overlay on hover -->
  <div
    class='absolute inset-0 -z-10 rounded-2xl opacity-0 transition-opacity duration-300 group-hover:opacity-100'
    style='background: radial-gradient(circle at top left, rgba(99, 102, 241, 0.1), transparent 60%);'
  >
  </div>

  <div>
    <h3
      class='mb-2 text-lg font-bold text-white transition-colors group-hover:text-white sm:text-xl'
    >
      {title}
    </h3>
    <p class='hidden text-sm leading-relaxed text-muted sm:block'>
      {description}
    </p>
  </div>

  <div class='mt-4 flex items-center gap-2'>
    <span
      class='text-sm font-medium text-muted transition-colors group-hover:text-primary'
    >
      Learn more
    </span>
    <svg
      class='h-4 w-4 text-muted transition-all group-hover:translate-x-1 group-hover:text-primary'
      fill='none'
      stroke='currentColor'
      viewBox='0 0 24 24'
    >
      <path
        stroke-linecap='round'
        stroke-linejoin='round'
        stroke-width='2'
        d='M9 5l7 7-7 7'></path>
    </svg>
  </div>

  {
    isNew && (
      <span class='absolute right-4 top-4 flex items-center gap-1.5 rounded-full bg-accent/10 px-2.5 py-1 text-xs font-semibold text-accent ring-1 ring-accent/20'>
        <span class='flex h-1.5 w-1.5'>
          <span class='absolute inline-flex h-1.5 w-1.5 animate-ping rounded-full bg-accent opacity-75' />
          <span class='relative inline-flex h-1.5 w-1.5 rounded-full bg-accent' />
        </span>
        New
      </span>
    )
  }
</a>
