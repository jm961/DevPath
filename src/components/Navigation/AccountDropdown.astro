---
import Icon from '../AstroIcon.astro';
---

<div class='relative hidden' data-auth-required>
  <button
    class='flex h-8 w-28 items-center justify-center rounded-full bg-gradient-to-r from-blue-500 to-blue-700 px-4 py-2 text-sm font-medium text-white hover:from-blue-500 hover:to-blue-600'
    type='button'
    data-account-button
    id='account-button'
  >
    <span class='inline-flex items-center gap-1.5'>
      Account
      <Icon
        icon='chevron-down'
        class='relative top-[0.5px] h-3 w-3 stroke-[3px]'
      />
    </span>
  </button>
</div>

<!-- Dropdown rendered separately - will be moved to body by JS -->
<div
  class='w-48 rounded-md bg-slate-800 shadow-2xl'
  data-account-dropdown
  data-auth-required
  style='display: none;'
>
  <ul class='py-1'>
    <li>
      <a
        href='/settings/update-profile'
        class='block px-4 py-2.5 text-sm font-medium text-slate-100 hover:bg-slate-700 cursor-pointer transition-colors'
      >
        Settings
      </a>
    </li>
    <li>
      <button
        class='block w-full px-4 py-2.5 text-left text-sm font-medium text-slate-100 hover:bg-slate-700 cursor-pointer transition-colors'
        type='button'
        data-logout-button
      >
        Logout
      </button>
    </li>
  </ul>
</div>
