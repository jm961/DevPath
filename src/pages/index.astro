---
import FeaturedItems from '../components/FeaturedItems/FeaturedItems.astro';
import Footer from '../components/Footer.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import { getAllBestPractices } from '../lib/best-pratice';
import { getAllGuides } from '../lib/guide';
import { getRoadmapsByTag } from '../lib/roadmap';
import { getAllVideos } from '../lib/video';

const roleRoadmaps = await getRoadmapsByTag('role-roadmap');
const skillRoadmaps = await getRoadmapsByTag('skill-roadmap');
const bestPractices = await getAllBestPractices();

const guides = await getAllGuides();
const videos = await getAllVideos();
---

<BaseLayout
  title='DevPath â€” Your developer growth path'
  description={'Curated roadmaps, guides, and tools to help you choose your path and level up as a developer.'}
  permalink={'/'}
>
  <div class='relative'>
    <!-- Hero Section - Enhanced -->
    <div class='relative'>
      <div class='container px-6 py-12 sm:py-16 lg:py-20'>
        <div class='mx-auto max-w-6xl'>
          <!-- Badge -->
          <div class='mb-6 flex items-center justify-center gap-3 sm:mb-8'>
            <div
              class='flex items-center gap-2.5 rounded-full border border-primary/20 bg-primary/5 px-5 py-2.5 backdrop-blur-sm'
            >
              <div class='h-2 w-2 animate-pulse rounded-full bg-primary'>
              </div>
              <span class='text-sm font-semibold text-primary'>Trusted by 100K+ developers worldwide</span>
            </div>
          </div>

          <!-- Main Heading -->
          <h1
            class='mb-6 text-center text-5xl font-black leading-[1.05] tracking-tight sm:text-7xl lg:text-8xl'
          >
            <span class='block text-white'>Accelerate Your</span>
            <span class='block bg-gradient-to-r from-blue-400 via-blue-500 to-cyan-400 bg-clip-text text-transparent'>Developer Career</span>
          </h1>

          <!-- Subtitle -->
          <p
            class='mx-auto mb-8 max-w-3xl text-center text-lg leading-relaxed text-gray-400 sm:text-xl sm:leading-relaxed'
          >
            Curated learning paths, interactive roadmaps, and expert guides to help you master modern development. From beginner to expert, we've got you covered.
          </p>

          <!-- CTA Buttons -->
          <div
            class='flex flex-col items-center justify-center gap-4 sm:flex-row'
          >
            <a
              href='/roadmaps'
              class='btn-primary group inline-flex items-center gap-2 px-12 py-5 text-base shadow-lg shadow-primary/25'
            >
              <span>Explore Roadmaps</span>
              <svg
                class='h-5 w-5 transition-transform group-hover:translate-x-1'
                fill='none'
                stroke='currentColor'
                viewBox='0 0 24 24'
              >
                <path
                  stroke-linecap='round'
                  stroke-linejoin='round'
                  stroke-width='2'
                  d='M13 7l5 5m0 0l-5 5m5-5H6'></path>
              </svg>
            </a>
            <a
              href='/guides'
              class='btn-ghost inline-flex items-center gap-2 px-12 py-5 text-base'
            >
              <span>Read Guides</span>
            </a>
          </div>

          <!-- Stats -->
          <div class='mt-12 grid grid-cols-2 gap-6 sm:grid-cols-4 lg:gap-8'>
            <div class='text-center'>
              <div class='mb-2 text-3xl font-black text-white sm:text-4xl'>30+</div>
              <div class='text-sm text-gray-400'>Roadmaps</div>
            </div>
            <div class='text-center'>
              <div class='mb-2 text-3xl font-black text-white sm:text-4xl'>35+</div>
              <div class='text-sm text-gray-400'>Guides</div>
            </div>
            <div class='text-center'>
              <div class='mb-2 text-3xl font-black text-white sm:text-4xl'>100K+</div>
              <div class='text-sm text-gray-400'>Developers</div>
            </div>
            <div class='text-center'>
              <div class='mb-2 text-3xl font-black text-white sm:text-4xl'>Free</div>
              <div class='text-sm text-gray-400'>Forever</div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Features Section -->
    <div class='border-t border-white/5'>
      <div class='container px-6 py-12 sm:py-16'>
        <div class='mx-auto max-w-6xl'>
          <div class='mb-10 text-center'>
            <h2 class='mb-4 text-3xl font-black text-white sm:text-5xl'>
              Everything You Need to Succeed
            </h2>
            <p class='mx-auto max-w-2xl text-lg text-gray-400'>
              A comprehensive platform designed to accelerate your learning journey
            </p>
          </div>

          <div class='grid gap-6 sm:grid-cols-2 lg:grid-cols-3 lg:gap-8'>
            <!-- Feature 1 -->
            <div class='group relative overflow-hidden rounded-2xl border border-white/5 bg-white/[0.02] p-8 transition-all duration-300 hover:border-primary/30 hover:bg-white/[0.04]'>
              <div class='mb-5 inline-flex rounded-xl bg-blue-500/10 p-3 ring-1 ring-blue-500/20'>
                <svg class='h-6 w-6 text-blue-400' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
                  <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7'></path>
                </svg>
              </div>
              <h3 class='mb-3 text-xl font-bold text-white'>Interactive Roadmaps</h3>
              <p class='leading-relaxed text-gray-400'>
                Visual, step-by-step paths to master any technology. Track your progress and never feel lost.
              </p>
            </div>

            <!-- Feature 2 -->
            <div class='group relative overflow-hidden rounded-2xl border border-white/5 bg-white/[0.02] p-8 transition-all duration-300 hover:border-primary/30 hover:bg-white/[0.04]'>
              <div class='mb-5 inline-flex rounded-xl bg-cyan-500/10 p-3 ring-1 ring-cyan-500/20'>
                <svg class='h-6 w-6 text-cyan-400' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
                  <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253'></path>
                </svg>
              </div>
              <h3 class='mb-3 text-xl font-bold text-white'>Expert Guides</h3>
              <p class='leading-relaxed text-gray-400'>
                In-depth articles and tutorials written by industry professionals to deepen your knowledge.
              </p>
            </div>

            <!-- Feature 3 -->
            <div class='group relative overflow-hidden rounded-2xl border border-white/5 bg-white/[0.02] p-8 transition-all duration-300 hover:border-primary/30 hover:bg-white/[0.04]'>
              <div class='mb-5 inline-flex rounded-xl bg-purple-500/10 p-3 ring-1 ring-purple-500/20'>
                <svg class='h-6 w-6 text-purple-400' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
                  <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M13 10V3L4 14h7v7l9-11h-7z'></path>
                </svg>
              </div>
              <h3 class='mb-3 text-xl font-bold text-white'>Best Practices</h3>
              <p class='leading-relaxed text-gray-400'>
                Learn industry standards and proven patterns to write better, more maintainable code.
              </p>
            </div>

            <!-- Feature 4 -->
            <div class='group relative overflow-hidden rounded-2xl border border-white/5 bg-white/[0.02] p-8 transition-all duration-300 hover:border-primary/30 hover:bg-white/[0.04]'>
              <div class='mb-5 inline-flex rounded-xl bg-green-500/10 p-3 ring-1 ring-green-500/20'>
                <svg class='h-6 w-6 text-green-400' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
                  <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z'></path>
                </svg>
              </div>
              <h3 class='mb-3 text-xl font-bold text-white'>Progress Tracking</h3>
              <p class='leading-relaxed text-gray-400'>
                Mark your progress, save your work, and see how far you've come on your learning journey.
              </p>
            </div>

            <!-- Feature 5 -->
            <div class='group relative overflow-hidden rounded-2xl border border-white/5 bg-white/[0.02] p-8 transition-all duration-300 hover:border-primary/30 hover:bg-white/[0.04]'>
              <div class='mb-5 inline-flex rounded-xl bg-orange-500/10 p-3 ring-1 ring-orange-500/20'>
                <svg class='h-6 w-6 text-orange-400' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
                  <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z'></path>
                </svg>
              </div>
              <h3 class='mb-3 text-xl font-bold text-white'>Community Driven</h3>
              <p class='leading-relaxed text-gray-400'>
                Built by developers, for developers. Contribute, suggest improvements, and grow together.
              </p>
            </div>

            <!-- Feature 6 -->
            <div class='group relative overflow-hidden rounded-2xl border border-white/5 bg-white/[0.02] p-8 transition-all duration-300 hover:border-primary/30 hover:bg-white/[0.04]'>
              <div class='mb-5 inline-flex rounded-xl bg-pink-500/10 p-3 ring-1 ring-pink-500/20'>
                <svg class='h-6 w-6 text-pink-400' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
                  <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01'></path>
                </svg>
              </div>
              <h3 class='mb-3 text-xl font-bold text-white'>Constantly Updated</h3>
              <p class='leading-relaxed text-gray-400'>
                Stay current with the latest technologies, frameworks, and industry trends.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <FeaturedItems
      heading='Role based Roadmaps'
      featuredItems={roleRoadmaps.map((roadmapItem) => ({
        text: roadmapItem.frontmatter.briefTitle,
        url: `/${roadmapItem.id}`,
        isNew: roadmapItem.frontmatter.isNew,
        isUpcoming: roadmapItem.frontmatter.isUpcoming,
      }))}
    />

    <FeaturedItems
      heading='Skill based Roadmaps'
      featuredItems={skillRoadmaps.map((roadmapItem) => ({
        text:
          roadmapItem.frontmatter.briefTitle === 'Go'
            ? 'Go Roadmap'
            : roadmapItem.frontmatter.briefTitle,
        url: `/${roadmapItem.id}`,
        isNew: roadmapItem.frontmatter.isNew,
        isUpcoming: roadmapItem.frontmatter.isUpcoming,
      }))}
    />

    <FeaturedItems
      heading='Best Practices'
      featuredItems={bestPractices.map((bestPractice) => ({
        text: bestPractice.frontmatter.briefTitle,
        url: `/best-practices/${bestPractice.id}`,
        isNew: bestPractice.frontmatter.isNew,
        isUpcoming: bestPractice.frontmatter.isUpcoming,
      }))}
    />

    <!-- Latest Content -->
    <div class='border-t border-white/5'>
      <div class='container px-6 py-12 sm:py-16'>
        <div class='mx-auto max-w-6xl space-y-12 sm:space-y-16'>
          <!-- Guides -->
          <div>
            <div class='mb-8 flex items-end justify-between'>
              <div>
                <h2 class='mb-2 text-3xl font-black text-white sm:text-4xl'>
                  Latest Guides
                </h2>
                <p class='text-gray-400'>
                  Deep dives into important development topics
                </p>
              </div>
              <a
                href='/guides'
                class='group hidden items-center gap-2 text-sm font-semibold text-primary transition-colors hover:text-primary-light sm:inline-flex'
              >
                <span>View All</span>
                <svg
                  class='h-4 w-4 transition-transform group-hover:translate-x-1'
                  fill='none'
                  stroke='currentColor'
                  viewBox='0 0 24 24'
                >
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    stroke-width='2'
                    d='M13 7l5 5m0 0l-5 5m5-5H6'></path>
                </svg>
              </a>
            </div>
            <div class='grid gap-4 sm:gap-5'>
              {
                guides.slice(0, 5).map((guide, index) => (
                  <a
                    href={`/guides/${guide.id}`}
                    class='group relative flex items-center gap-5 rounded-2xl border border-white/5 bg-white/[0.02] p-5 transition-all duration-300 hover:border-primary/30 hover:bg-white/[0.04] sm:p-6'
                  >
                    <div class='flex h-12 w-12 shrink-0 items-center justify-center rounded-xl bg-gradient-to-br from-blue-500/20 to-cyan-500/20 text-lg font-black text-primary ring-1 ring-blue-500/20'>
                      {(index + 1).toString().padStart(2, '0')}
                    </div>
                    <div class='flex-1 min-w-0'>
                      <h3 class='text-base font-semibold text-white transition-colors group-hover:text-primary sm:text-lg'>
                        {guide.frontmatter.title}
                      </h3>
                    </div>
                    <svg
                      class='h-5 w-5 shrink-0 text-gray-600 transition-all group-hover:translate-x-1 group-hover:text-primary'
                      fill='none'
                      stroke='currentColor'
                      viewBox='0 0 24 24'
                    >
                      <path
                        stroke-linecap='round'
                        stroke-linejoin='round'
                        stroke-width='2'
                        d='M13 7l5 5m0 0l-5 5m5-5H6'
                      />
                    </svg>
                  </a>
                ))
              }
            </div>
            <a
              href='/guides'
              class='mt-6 inline-flex items-center gap-2 text-sm font-semibold text-primary transition-colors hover:text-primary-light sm:hidden'
            >
              <span>View All Guides</span>
              <svg
                class='h-4 w-4'
                fill='none'
                stroke='currentColor'
                viewBox='0 0 24 24'
              >
                <path
                  stroke-linecap='round'
                  stroke-linejoin='round'
                  stroke-width='2'
                  d='M13 7l5 5m0 0l-5 5m5-5H6'></path>
              </svg>
            </a>
          </div>

          <!-- Videos -->
          <div>
            <div class='mb-8 flex items-end justify-between'>
              <div>
                <h2 class='mb-2 text-3xl font-black text-white sm:text-4xl'>
                  Video Tutorials
                </h2>
                <p class='text-gray-400'>
                  Visual learning for complex concepts
                </p>
              </div>
              <a
                href='/videos'
                class='group hidden items-center gap-2 text-sm font-semibold text-primary transition-colors hover:text-primary-light sm:inline-flex'
              >
                <span>View All</span>
                <svg
                  class='h-4 w-4 transition-transform group-hover:translate-x-1'
                  fill='none'
                  stroke='currentColor'
                  viewBox='0 0 24 24'
                >
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    stroke-width='2'
                    d='M13 7l5 5m0 0l-5 5m5-5H6'></path>
                </svg>
              </a>
            </div>
            <div class='grid gap-5 sm:grid-cols-2 lg:grid-cols-3'>
              {
                videos.slice(0, 6).map((video) => (
                  <a
                    href={`/videos/${video.id}`}
                    class='group relative overflow-hidden rounded-2xl border border-white/5 bg-white/[0.02] p-6 transition-all duration-300 hover:border-primary/30 hover:bg-white/[0.04]'
                  >
                    <div class='mb-5 inline-flex rounded-xl bg-gradient-to-br from-red-500/20 to-pink-500/20 p-3 ring-1 ring-red-500/20 transition-all group-hover:scale-110 group-hover:ring-red-500/30'>
                      <svg
                        class='h-6 w-6 text-red-400'
                        fill='none'
                        stroke='currentColor'
                        viewBox='0 0 24 24'
                      >
                        <path
                          stroke-linecap='round'
                          stroke-linejoin='round'
                          stroke-width='2'
                          d='M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z'
                        />
                        <path
                          stroke-linecap='round'
                          stroke-linejoin='round'
                          stroke-width='2'
                          d='M21 12a9 9 0 11-18 0 9 9 0 0118 0z'
                        />
                      </svg>
                    </div>
                    <h3 class='text-base font-semibold leading-snug text-white transition-colors group-hover:text-primary'>
                      {video.frontmatter.title}
                    </h3>
                  </a>
                ))
              }
            </div>
            <a
              href='/videos'
              class='mt-6 inline-flex items-center gap-2 text-sm font-semibold text-primary transition-colors hover:text-primary-light sm:hidden'
            >
              <span>View All Videos</span>
              <svg
                class='h-4 w-4'
                fill='none'
                stroke='currentColor'
                viewBox='0 0 24 24'
              >
                <path
                  stroke-linecap='round'
                  stroke-linejoin='round'
                  stroke-width='2'
                  d='M13 7l5 5m0 0l-5 5m5-5H6'></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Final CTA -->
    <div class='border-t border-white/5'>
      <div class='container px-6 py-12 sm:py-16'>
        <div class='relative mx-auto max-w-4xl overflow-hidden rounded-2xl border border-white/10 bg-gradient-to-br from-blue-500/10 via-purple-500/10 to-cyan-500/10 p-8 sm:p-12'>
          <!-- Decorative Elements -->
          <div class='absolute -right-16 -top-16 h-48 w-48 rounded-full bg-blue-500/20 blur-3xl'></div>
          <div class='absolute -bottom-16 -left-16 h-48 w-48 rounded-full bg-purple-500/20 blur-3xl'></div>
          
          <div class='relative z-10 text-center'>
            <div class='mb-4 inline-flex items-center gap-2 rounded-full border border-primary/30 bg-primary/10 px-3 py-1.5 backdrop-blur-sm'>
              <svg class='h-3.5 w-3.5 text-primary' fill='currentColor' viewBox='0 0 20 20'>
                <path d='M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z'></path>
              </svg>
              <span class='text-xs font-semibold text-primary'>Loved by 100K+ Developers</span>
            </div>

            <h2 class='mb-4 text-3xl font-black leading-tight text-white sm:text-4xl lg:text-5xl'>
              Start Your Learning<br />Journey Today
            </h2>
            
            <p class='mx-auto mb-6 max-w-2xl text-base leading-relaxed text-gray-300 sm:text-lg'>
              Join thousands of developers who are leveling up their skills with structured roadmaps and expert guidance
            </p>
            
            <div class='flex flex-col items-center justify-center gap-3 sm:flex-row sm:gap-4'>
              <a
                href='/signup'
                class='btn-primary group inline-flex w-full items-center justify-center gap-2 px-8 py-3.5 text-sm shadow-xl shadow-primary/25 sm:w-auto'
              >
                <span>Get Started Free</span>
                <svg
                  class='h-4 w-4 transition-transform duration-300 ease-out group-hover:translate-x-1'
                  fill='none'
                  stroke='currentColor'
                  viewBox='0 0 24 24'
                >
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    stroke-width='2'
                    d='M13 7l5 5m0 0l-5 5m5-5H6'></path>
                </svg>
              </a>
              <a
                href='/roadmaps'
                class='btn-ghost group inline-flex w-full items-center justify-center gap-2 px-8 py-3.5 text-sm sm:w-auto'
              >
                <span>Explore Roadmaps</span>
              </a>
            </div>

            <div class='mt-6 flex flex-wrap items-center justify-center gap-4 text-xs text-gray-400 sm:gap-6'>
              <div class='flex items-center gap-1.5'>
                <svg class='h-4 w-4 text-green-400' fill='currentColor' viewBox='0 0 20 20'>
                  <path fill-rule='evenodd' d='M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z' clip-rule='evenodd'></path>
                </svg>
                <span>No credit card required</span>
              </div>
              <div class='flex items-center gap-1.5'>
                <svg class='h-4 w-4 text-green-400' fill='currentColor' viewBox='0 0 20 20'>
                  <path fill-rule='evenodd' d='M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z' clip-rule='evenodd'></path>
                </svg>
                <span>Always free</span>
              </div>
              <div class='flex items-center gap-1.5'>
                <svg class='h-4 w-4 text-green-400' fill='currentColor' viewBox='0 0 20 20'>
                  <path fill-rule='evenodd' d='M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z' clip-rule='evenodd'></path>
                </svg>
                <span>Track your progress</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Override footer slot to show only Footer (not OpenSourceBanner) -->
  <div slot='page-footer'>
    <Footer />
  </div>
</BaseLayout>

