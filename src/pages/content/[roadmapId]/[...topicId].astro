---
import { getRoadmapTopicFiles, RoadmapTopicFileType } from '../../../lib/roadmap-topic';

export async function getStaticPaths() {
  const topicPathMapping = await getRoadmapTopicFiles();

  return Object.keys(topicPathMapping).map((topicSlug) => {
    const topicDetails = topicPathMapping[topicSlug];
    const roadmapId = topicDetails.roadmapId;
    const topicId = topicSlug.replace(`/${roadmapId}/`, '');

    return {
      params: {
        topicId,
        roadmapId,
      },
      props: topicDetails,
    };
  });
}

const { file, heading } = Astro.props as RoadmapTopicFileType;

// Set caching headers
Astro.response.headers.set('Cache-Control', 'public, max-age=3600, s-maxage=3600');
---

<main id='main-content' class='prose-custom'>
  <file.Content />
</main>

<style is:global>
  /* Topic Content Styling - Keep it minimal for fastest load */
  .prose-custom {
    color: rgba(255, 255, 255, 0.9);
  }

  /* Headings */
  .prose-custom h1 {
    color: #ffffff;
    font-size: 1.875rem;
    font-weight: 800;
    line-height: 1.2;
    margin-bottom: 1rem;
    margin-top: 1.5rem;
  }

  .prose-custom h1:first-child {
    margin-top: 0;
  }

  .prose-custom h2 {
    color: #ffffff;
    font-size: 1.5rem;
    font-weight: 700;
    line-height: 1.3;
    margin-bottom: 0.75rem;
    margin-top: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .prose-custom h3 {
    color: #ffffff;
    font-size: 1.25rem;
    font-weight: 600;
    line-height: 1.4;
    margin-bottom: 0.5rem;
    margin-top: 1rem;
  }

  .prose-custom h4,
  .prose-custom h5,
  .prose-custom h6 {
    color: rgba(255, 255, 255, 0.95);
    font-weight: 600;
    margin-bottom: 0.5rem;
    margin-top: 1rem;
  }

  /* Paragraphs */
  .prose-custom p {
    margin-top: 0;
    margin-bottom: 1rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.8);
  }

  /* Links */
  .prose-custom a {
    color: #60a5fa;
    text-decoration: underline;
    text-decoration-color: rgba(96, 165, 250, 0.3);
    text-underline-offset: 2px;
    transition: all 0.2s;
  }

  .prose-custom a:hover {
    color: #93c5fd;
    text-decoration-color: rgba(147, 197, 253, 0.6);
  }

  /* Lists */
  .prose-custom ul,
  .prose-custom ol {
    margin-top: 0.5rem;
    margin-bottom: 1rem;
    padding-left: 1.5rem;
    color: rgba(255, 255, 255, 0.8);
  }

  .prose-custom li {
    margin-top: 0.25rem;
    margin-bottom: 0.25rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.8);
  }

  .prose-custom ul > li::marker {
    color: #3b82f6;
  }

  .prose-custom ol > li::marker {
    color: #3b82f6;
    font-weight: 600;
  }

  /* Code */
  .prose-custom code {
    background: rgba(59, 130, 246, 0.1);
    color: #60a5fa;
    padding: 0.125rem 0.375rem;
    border-radius: 0.375rem;
    font-size: 0.875em;
    font-weight: 500;
    border: 1px solid rgba(59, 130, 246, 0.2);
  }

  .prose-custom pre {
    background: rgba(0, 0, 0, 0.4);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 0.5rem;
    padding: 1rem;
    margin-top: 1rem;
    margin-bottom: 1rem;
    overflow-x: auto;
  }

  .prose-custom pre code {
    background: transparent;
    border: none;
    padding: 0;
    color: rgba(255, 255, 255, 0.9);
    font-size: 0.875rem;
    line-height: 1.6;
  }

  /* Blockquotes */
  .prose-custom blockquote {
    border-left: 3px solid #3b82f6;
    background: rgba(59, 130, 246, 0.05);
    padding: 0.75rem 1rem;
    margin: 1rem 0;
    border-radius: 0 0.5rem 0.5rem 0;
    color: rgba(255, 255, 255, 0.85);
    font-style: normal;
  }

  .prose-custom blockquote p {
    margin-bottom: 0;
    color: rgba(255, 255, 255, 0.85);
  }

  /* Tables */
  .prose-custom table {
    width: 100%;
    margin-top: 1rem;
    margin-bottom: 1rem;
    border-collapse: collapse;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 0.5rem;
    overflow: hidden;
  }

  .prose-custom thead {
    background: rgba(59, 130, 246, 0.1);
  }

  .prose-custom th {
    padding: 0.75rem;
    text-align: left;
    font-weight: 600;
    color: #ffffff;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .prose-custom td {
    padding: 0.75rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    color: rgba(255, 255, 255, 0.8);
  }

  .prose-custom tr:last-child td {
    border-bottom: none;
  }

  .prose-custom tbody tr:hover {
    background: rgba(255, 255, 255, 0.02);
  }

  /* Horizontal Rule */
  .prose-custom hr {
    border: none;
    height: 1px;
    background: linear-gradient(
      to right,
      transparent,
      rgba(255, 255, 255, 0.2),
      transparent
    );
    margin: 1.5rem 0;
  }

  /* Images */
  .prose-custom img {
    border-radius: 0.5rem;
    margin-top: 1rem;
    margin-bottom: 1rem;
    max-width: 100%;
    height: auto;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  /* Strong/Bold */
  .prose-custom strong {
    color: #ffffff;
    font-weight: 600;
  }

  /* Emphasis/Italic */
  .prose-custom em {
    color: rgba(255, 255, 255, 0.9);
  }
</style>









