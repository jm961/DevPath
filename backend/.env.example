# Server Configuration
PORT=4000
NODE_ENV=production

# Database Configuration
# Option A (recommended for managed providers like Supabase): single DATABASE_URL
# Example (Supabase): postgres://postgres:[PASSWORD]@[HOST]:5432/postgres
DATABASE_URL=

# Option B: individual parameters (used if DATABASE_URL is not set)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=devpath
DB_USER=your_db_user
DB_PASSWORD=your_secure_db_password

# JWT Configuration
# Generate a secure secret with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_secure_jwt_secret_here
JWT_EXPIRES_IN=7d

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-domain.com
# Multiple domains supported, separate with commas. Wildcards (e.g. https://*.vercel.app) are allowed.
PUBLIC_API_URL=https://your-api-domain.com/api

# Allowed API hosts (production domain restriction)
# Comma-separated hostnames (no protocol/paths). Include your Railway preview host while testing.
# Example: api.devpath.sh,devpath-api.up.railway.app
ALLOWED_API_HOSTS=api.devpath.sh

# Email Service (for production)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# EMAIL_FROM=noreply@devpath.com

# Optional: Error Tracking
# SENTRY_DSN=your_sentry_dsn_here

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Notes for Supabase:
# - Create a Supabase project and database.
# - Go to Project Settings > Database > Connection Info and copy the connection string into DATABASE_URL.
# - Supabase requires SSL; the server config enables SSL automatically in production.
